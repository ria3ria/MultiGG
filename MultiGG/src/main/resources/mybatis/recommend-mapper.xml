<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="recommend">
		<select id="selectOne" parameterType="recommendDto" resultType="recommendDto">
			SELECT * FROM COMMENTRECOMMEND WHERE MEMBERNICKNAME=#{membernickname}
		</select>
		<update id="update" parameterType="recommendDto">
			UPDATE COMMENTRECOMMEND SET RECOMMEND=#{recommend} WHERE MEMBERNICKNAME=#{membernickname}
		</update>
		<insert id="insert" parameterType="recommendDto">
			INSERT INTO COMMENTRECOMMEND VALUES(#{membernickname},#{commentno},#{recommend})
		</insert>
		<select id="countGood" parameterType="recommendDto" resultType="int">
			SELECT COUNT(*) COMMENTRECOMMEND WHERE RECOMMEND=1
		</select>
		<select id="countBad" parameterType="recommendDto" resultType="int">
			SELECT COUNT(*) COMMENTRECOMMEND WHERE RECOMMEND=-1
		</select>
</mapper> 


